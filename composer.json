{
    "name": "galaxon/color",
    "description": "PHP class for CSS colors.",
    "type": "library",
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "../Core"
        },
        {
            "type": "path",
            "url": "../Units"
        },
        {
            "type": "path",
            "url": "../CodingStandard"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-ctype": "*",
        "galaxon/core": "@dev",
        "galaxon/units": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0 || ^12.0",
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "galaxon/coding-standard": "@dev"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Galaxon\\Color\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Galaxon\\Color\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix": "vendor/bin/phpcbf",
        "check": "vendor/bin/phpcs",
        "analyse": "vendor/bin/phpstan analyse -l 9",
        "test": "php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-html build/coverage --coverage-clover build/logs/clover.xml --do-not-cache-result",
        "coverage": "php scripts/coverage-check.php",
        "quality": [
            "@fix",
            "@check",
            "@analyse",
            "@test",
            "@coverage"
        ]
    }
}
